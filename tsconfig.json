    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "paths":{
      "pino": ["node_modules/pino"],
      "types": ["types"]
    }

