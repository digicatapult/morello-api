  "devDependencies": {
    "@types/config": "^0.0.41",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.34",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^7.2.0",
    "nodemon": "^2.0.16",
    "ts-jest": "^28.0.2",
